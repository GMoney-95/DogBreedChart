<table cellpadding="0" cellspacing="0">
  <thead>
    <tr>
      <th>Photo</th>
      <th>Name</th>
      <th>Size</th>
      <th>Kid Friendly</th>
      <th>Dog Friendly</th>
      <th>Low Shedding</th>
      <th>Easy to Groom</th>
      <th>High Energy</th>
      <th>Good Health</th>
      <th>Low Barking</th>
      <th>Intelligence</th>
      <th>Easy to Train</th>
      <th>Tolerates Hot</th>
      <th>Tolerates Cold</th>
    </tr>
  </thead>
  <tbody>
    {{#each breeds}}
    <tr>
      <td>
        <a href="https://en.wikipedia.org/wiki/{{name}}" target="_blank">
          <img src="img/{{id}}.jpg" title="{{name}}"/>
        </a>
      </td>
      <td>
        <a href="https://en.wikipedia.org/wiki/{{name}}" target="_blank">
          {{name}}
        </a>
      </td>
      <td>
        <span class="size-{{size}}">{{size}}</span>
      </td>
      <td>
        <span class="size-{{kidFriendly}}">{{kidFriendly}}</span>
      </td>
      <td>
        <span class="size-{{dogFriendly}}">{{dogFriendly}}</span>
      </td>
      <td>
        <span class="size-{{lowShedding}}">{{lowShedding}}</span>
      </td>
      <td>
        <span class="size-{{easyToGroom}}">{{easyToGroom}}</span>
      </td>
      <td>
        <span class="size-{{highEnergy}}">{{highEnergy}}</span>
      </td>
      <td>
        <span class="size-{{goodHealth}}">{{goodHealth}}</span>
      </td>
      <td>
        <span class="size-{{lowBarking}}">{{lowBarking}}</span>
      </td>
      <td>
        <span class="size-{{intelligence}}">{{intelligence}}</span>
      </td>
      <td>
        <span class="size-{{easyToTrain}}">{{easyToTrain}}</span>
      </td>
      <td>
        <span class="size-{{toleratesHot}}">{{toleratesHot}}</span>
      </td>
      <td>
        <span class="size-{{toleratesCold}}">{{toleratesCold}}</span>
      </td>
    </tr>
    {{/each}}
    <tr>
      <td colspan="13">
        <a href="https://github.com/ericdrowell/DogBreedChart/blob/master/dogs.json" target="_blank">Edit or view the raw data</a>
      </td>
    </tr>
  </tbody>
</table>